<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Основы Hibernate -->
<!-- http://habrahabr.ru/post/29694/ -->

<!-- http://docs.jboss.org/hibernate/orm/4.3/manual/en-US/html/ch01.html#tutorial-firstapp-configuration -->
<hibernate-configuration>

	<session-factory>
		<!-- Database connection settings -->
		<!-- 
			Если не указать название in-memory db, то она сохранится в файле.
			TODO сделать тест на эту особенность, возможно она недокументированная и исчезнет в другой версии
			 -->
<!-- 		<property name="connection.url">jdbc:h2:file:~/mydatabases/foundedwords;FILE_LOCK=NO;TRACE_LEVEL_FILE=0</property> -->
<!-- 		<property name="connection.url">jdbc:h2:mem:foundedwords</property> -->
		<property name="connection.url">jdbc:h2:file:E:/Programming/Examples 9 java/swt/Coursework-on-Software-Engineering/h2db/thematicdicts;FILE_LOCK=NO;TRACE_LEVEL_FILE=0</property>
		
		<property name="connection.driver_class">org.h2.Driver</property>
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>

		<!-- SQL dialect -->
		<property name="dialect">org.hibernate.dialect.H2Dialect</property>
<!-- 		<property name="hibernate.dialect">org.hibernate.dialect.H2Dialect</property> -->

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>
		
		<property name="hbm2ddl.auto">create</property>

		<!-- Disable the second-level cache -->
		        <property name="hibernate.cache.use_second_level_cache">false</property>
        <property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
        
		<!-- Echo all executed SQL to stdout -->
		<property name="show_sql">true</property>

		<mapping class="entities.Word" />
		<mapping class="entities.Rubric" />
		<mapping class="entities.Probability" />

	</session-factory>

</hibernate-configuration>